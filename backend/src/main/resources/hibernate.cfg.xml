<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <property name = "hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>

        <!-- Assume test is the database name -->

        <property name = "hibernate.connection.url">
            jdbc:mysql://localhost/online_school
        </property>

        <property name = "hibernate.connection.username">
            A

        </property>

        <property name = "hibernate.connection.password">
            ssss
        </property>

        <property name = "hibernate.show_sql">
            true

        </property>

        <property name = "hibernate.format_sql">
            true

        </property>

        <mapping class = "osHibernate.AdditionalMaterialsEntity"/>
        <mapping class = "osHibernate.PersonEntity"/>
        <mapping class = "osHibernate.LectureEntity"/>
        <mapping class = "osHibernate.CourseEntity"/>
        <mapping class = "osHibernate.HomeworkEntity"/>




    </session-factory>
</hibernate-configuration>